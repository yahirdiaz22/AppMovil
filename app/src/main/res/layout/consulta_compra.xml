<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#00B6FA">

    <!-- Título de la consulta de compra -->
    <TextView
        android:id="@+id/consulta_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta de Compras"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"/>

    <!-- Detalle de los productos -->
    <TextView
        android:id="@+id/detalle_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Producto: Camiseta"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <TextView
        android:id="@+id/detalle_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio: $25.00"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <TextView
        android:id="@+id/detalle_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad: 2"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <TextView
        android:id="@+id/detalle_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtotal: $50.00"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginVertical="8dp" />

    <!-- Botón para continuar -->
    <Button
        android:id="@+id/btn_continuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar con la Compra"
        android:textColor="#000000"
        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
