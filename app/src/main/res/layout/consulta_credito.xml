<!-- res/layout/activity_consulta_credito.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botón para consultar crédito -->
    <Button
        android:id="@+id/btnConsultarCredito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar Crédito"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <!-- El contenedor donde se mostrarán los detalles del crédito -->
    <LinearLayout
        android:id="@+id/llDetallesCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btnConsultarCredito"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <!-- Detalles de crédito -->
        <TextView
            android:id="@+id/tvCreditoInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crédito Inicial: $3000.00"
            android:textSize="18sp"
            android:textColor="#4CAF50"/>

        <TextView
            android:id="@+id/tvSaldoPendiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Pendiente: $1500.00"
            android:textSize="18sp"
            android:textColor="#FF5722"/>

        <TextView
            android:id="@+id/tvFechaVencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Vencimiento: 2024-12-31"
            android:textSize="18sp"
            android:textColor="#FF9800"/>

        <TextView
            android:id="@+id/tvMontoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto Total: $4500.00"
            android:textSize="18sp"
            android:textColor="#2196F3"/>
    </LinearLayout>

    <!-- Botón para regresar -->
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_below="@id/llDetallesCredito"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
