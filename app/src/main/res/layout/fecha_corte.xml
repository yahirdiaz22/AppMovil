<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información de la Fecha de Corte"
        android:textSize="24sp"
        android:textColor="#003366"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Explicación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La fecha de corte marca el cierre del ciclo de facturación y genera el estado de cuenta."
        android:textSize="16sp"
        android:textColor="#4682B4"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La fecha límite de pago indica hasta cuándo puedes pagar sin generar intereses."
        android:textSize="16sp"
        android:textColor="#4682B4"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mantente atento a estas fechas para evitar cargos adicionales."
        android:textSize="16sp"
        android:textColor="#4682B4"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="5dp"/>

    <!-- Detalles de la fecha de corte -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de Corte:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#00008B"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtFechaCorte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15 de cada mes"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Límite de Pago:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#00008B"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtFechaLimitePago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 del mes siguiente"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Días restantes para pagar:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#00008B"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtDiasRestantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 días"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <!-- Botón para regresar al menú -->
    <Button
        android:id="@+id/btnRegresarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar al Menú"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>

</LinearLayout>
