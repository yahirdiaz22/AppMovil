<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Texto para la fecha de corte -->
    <TextView
        android:id="@+id/tvFechaCorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Corte"
        android:textSize="18sp"
        android:textColor="#FF5722"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Texto para los días restantes -->
    <TextView
        android:id="@+id/tvDiasRestantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Días restantes"
        android:textSize="18sp"
        android:textColor="#009688"
        android:layout_below="@id/tvFechaCorte"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
